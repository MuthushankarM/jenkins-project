pipeline {
    agent any

    tools {
        maven '3.9.11'   // must match EXACT name you used in Maven installation
        jdk 'jdk-21'  // must match EXACT name you used for JDK
    }

    stages {
        stage('Verify Tools') {
            steps {
                bat 'mvn -v'
                bat 'java -version'
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/viji-sarvesh/ciexpipeline.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean package -DskipTests=false'
            }
        }

        stage('Archive Artifacts') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }
}
